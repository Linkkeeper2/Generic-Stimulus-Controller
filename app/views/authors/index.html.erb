<h1>Listing authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @authors.each do |author| %>
  <tr>
    <td><%= author.name %></td>
    <td><%= link_to 'Show', [author.book, author] %></td>
    <td><%= link_to 'Edit', edit_book_author_path(author.book, author) %></td>
    <td><%= link_to 'Destroy', [author.book, author], method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Author', new_book_author_path(params[:book_id]) %>
